<Page x:Class="Nexor.ProcessesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Nexor"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="840"
      Title="ProcessesPage">

    <Page.Resources>
        <SolidColorBrush x:Key="CardBg" Color="#1C1C1C"/>
        <SolidColorBrush x:Key="CardBgHover" Color="#252525"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="AccentRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#3B82F6"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#10B981"/>
        <SolidColorBrush x:Key="AccentYellow" Color="#F59E0B"/>

        <!-- Custom ScrollBar Style -->
        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border Background="#3B82F6" CornerRadius="4"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid>
                            <Border Background="#1A1A1A" CornerRadius="4"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,10"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Medium"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="{StaticResource CardBgHover}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="SearchBox" TargetType="TextBox">
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="#0F0F0F">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Padding="30,30,30,20">
            <Grid>
                <StackPanel>
                    <TextBlock x:Name="TxtTitle" Text="Gestor de Processos" 
                               FontSize="32" FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock x:Name="TxtSubtitle" Text="Monitorize e controle as aplicações em execução" 
                               FontSize="14" 
                               Foreground="{StaticResource TextSecondary}" 
                               Margin="0,8,0,0"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Stats Cards -->
        <Grid Grid.Row="1" Margin="30,0,30,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Total Processes -->
            <Border Background="{StaticResource CardBg}" CornerRadius="12" Padding="20" Margin="0,0,8,0">
                <StackPanel>
                    <TextBlock Text="📊" FontSize="24" Margin="0,0,0,8"/>
                    <TextBlock x:Name="TxtProcessCount" Text="0" 
                               FontSize="28" FontWeight="Bold" 
                               Foreground="{StaticResource TextPrimary}"/>
                    <TextBlock x:Name="TxtProcessLabel" Text="Aplicações" 
                               FontSize="12" 
                               Foreground="{StaticResource TextSecondary}" 
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- CPU Usage -->
            <Border Grid.Column="1" Background="{StaticResource CardBg}" CornerRadius="12" Padding="20" Margin="8,0">
                <StackPanel>
                    <TextBlock Text="⚡" FontSize="24" Margin="0,0,0,8"/>
                    <TextBlock x:Name="TxtCPUUsage" Text="0%" 
                               FontSize="28" FontWeight="Bold" 
                               Foreground="{StaticResource AccentBlue}"/>
                    <TextBlock x:Name="TxtCPULabel" Text="Uso de CPU" 
                               FontSize="12" 
                               Foreground="{StaticResource TextSecondary}" 
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Memory Usage -->
            <Border Grid.Column="2" Background="{StaticResource CardBg}" CornerRadius="12" Padding="20" Margin="8,0">
                <StackPanel>
                    <TextBlock Text="💾" FontSize="24" Margin="0,0,0,8"/>
                    <TextBlock x:Name="TxtMemoryUsage" Text="0 GB" 
                               FontSize="28" FontWeight="Bold" 
                               Foreground="{StaticResource AccentYellow}"/>
                    <TextBlock x:Name="TxtMemoryLabel" Text="Memória RAM" 
                               FontSize="12" 
                               Foreground="{StaticResource TextSecondary}" 
                               Margin="0,4,0,0"/>
                </StackPanel>
            </Border>

            <!-- Refresh Button -->
            <Border Grid.Column="3" Background="{StaticResource CardBg}" CornerRadius="12" Padding="20" Margin="8,0,0,0">
                <Button x:Name="BtnRefresh" 
                        Content="🔄 Atualizar" 
                        Style="{StaticResource ModernButton}" 
                        Background="{StaticResource AccentGreen}"
                        Click="BtnRefresh_Click"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Stretch"/>
            </Border>
        </Grid>

        <!-- Process List -->
        <Border Grid.Row="2" Background="{StaticResource CardBg}" 
                CornerRadius="16" Margin="30,0,30,30" Padding="24">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Search Bar -->
                <Grid Grid.Row="0" Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBox x:Name="TxtSearch" 
                             Style="{StaticResource SearchBox}"
                             TextChanged="TxtSearch_TextChanged"/>

                    <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="12,0,0,0">
                        <Button x:Name="BtnSortName" Content="Nome" 
                                Style="{StaticResource ModernButton}" 
                                Margin="0,0,8,0"
                                Click="BtnSortName_Click"/>
                        <Button x:Name="BtnSortCPU" Content="CPU" 
                                Style="{StaticResource ModernButton}" 
                                Margin="0,0,8,0"
                                Click="BtnSortCPU_Click"/>
                        <Button x:Name="BtnSortMemory" Content="Memória" 
                                Style="{StaticResource ModernButton}"
                                Click="BtnSortMemory_Click"/>
                    </StackPanel>
                </Grid>

                <!-- Table Header -->
                <Grid Grid.Row="1" Margin="8,0,8,12">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="50"/>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" Text="" 
                               Foreground="{StaticResource TextSecondary}" 
                               FontSize="12" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="1" x:Name="TxtHeaderName" Text="APLICAÇÃO" 
                               Foreground="{StaticResource TextSecondary}" 
                               FontSize="12" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="2" x:Name="TxtHeaderCPU" Text="CPU" 
                               Foreground="{StaticResource TextSecondary}" 
                               FontSize="12" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="3" x:Name="TxtHeaderMemory" Text="MEMÓRIA" 
                               Foreground="{StaticResource TextSecondary}" 
                               FontSize="12" FontWeight="SemiBold"/>
                    <TextBlock Grid.Column="4" x:Name="TxtHeaderAction" Text="AÇÃO" 
                               Foreground="{StaticResource TextSecondary}" 
                               FontSize="12" FontWeight="SemiBold" 
                               HorizontalAlignment="Center"/>
                </Grid>

                <!-- Process List -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ProcessList">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#141414" 
                                        CornerRadius="10" 
                                        Padding="12" 
                                        Margin="0,0,0,8"
                                        MouseEnter="ProcessItem_MouseEnter" 
                                        MouseLeave="ProcessItem_MouseLeave">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="2.5*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="100"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Icon -->
                                        <Border Grid.Column="0" 
                                                Width="32" Height="32" 
                                                Background="#2A2A2A" 
                                                CornerRadius="8"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="{Binding Icon}" 
                                                       FontSize="16" 
                                                       HorizontalAlignment="Center" 
                                                       VerticalAlignment="Center"/>
                                        </Border>

                                        <!-- Process Name -->
                                        <StackPanel Grid.Column="1" 
                                                    VerticalAlignment="Center" 
                                                    Margin="12,0,0,0">
                                            <TextBlock Text="{Binding ProcessName}" 
                                                       Foreground="{StaticResource TextPrimary}" 
                                                       FontWeight="Medium" 
                                                       FontSize="14"/>
                                            <TextBlock Text="{Binding ProcessDescription}" 
                                                       Foreground="{StaticResource TextSecondary}" 
                                                       FontSize="11" 
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <!-- CPU -->
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding CpuUsage}" 
                                                       Foreground="{StaticResource AccentBlue}" 
                                                       FontWeight="SemiBold" 
                                                       FontSize="14"/>
                                        </StackPanel>

                                        <!-- Memory -->
                                        <StackPanel Grid.Column="3" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding MemoryUsage}" 
                                                       Foreground="{StaticResource AccentYellow}" 
                                                       FontWeight="SemiBold" 
                                                       FontSize="14"/>
                                        </StackPanel>

                                        <!-- Kill Button -->
                                        <Button Grid.Column="4" 
                                                Content="✕" 
                                                Background="{StaticResource AccentRed}" 
                                                Style="{StaticResource ModernButton}" 
                                                Padding="10" 
                                                FontSize="16"
                                                Click="BtnKillProcess_Click" 
                                                Tag="{Binding ProcessId}"
                                                HorizontalAlignment="Center"
                                                Width="40" Height="40"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>
    </Grid>
</Page>