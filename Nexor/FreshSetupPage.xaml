<UserControl x:Class="Nexor.FreshSetupPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent">

    <UserControl.Resources>
        <!-- Color Palette matching MainWindow -->
        <SolidColorBrush x:Key="PrimaryBg" Color="#010515"/>
        <SolidColorBrush x:Key="SecondaryBg" Color="#0A0F1E"/>
        <SolidColorBrush x:Key="CardBg" Color="#0F1419"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#1990FE"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#10B981"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#F59E0B"/>
        <SolidColorBrush x:Key="AccentRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="AccentPurple" Color="#8B5CF6"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="BorderColor" Color="#1A1F2E"/>

        <Storyboard x:Key="FadeIn">
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.4"/>
        </Storyboard>

        <Storyboard x:Key="ScaleIn">
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                           From="0.95" To="1" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                           From="0.95" To="1" Duration="0:0:0.3">
                <DoubleAnimation.EasingFunction>
                    <CubicEase EasingMode="EaseOut"/>
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                           From="0" To="1" Duration="0:0:0.3"/>
        </Storyboard>

        <!-- Step Card Style -->
        <Style x:Key="StepCard" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#12141A" Offset="0"/>
                        <GradientStop Color="#0A0D12" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#1A1F2E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                        <TranslateTransform Y="0"/>
                    </TransformGroup>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                           From="0" To="1" Duration="0:0:0.5"/>
                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(TranslateTransform.Y)"
                                           From="20" To="0" Duration="0:0:0.5">
                                <DoubleAnimation.EasingFunction>
                                    <CubicEase EasingMode="EaseOut"/>
                                </DoubleAnimation.EasingFunction>
                            </DoubleAnimation>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>

        <!-- Action Button Style -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="{Binding Path=Background.Color, RelativeSource={RelativeSource TemplatedParent}}" 
                                                BlurRadius="16" 
                                                ShadowDepth="0" 
                                                Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1.05" Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1.05" Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Rounded Progress Bar Style -->
        <Style x:Key="RoundedProgressBar" TargetType="ProgressBar">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ProgressBar">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="3" 
                                ClipToBounds="True">
                            <Grid>
                                <Border x:Name="PART_Track" />
                                <Border x:Name="PART_Indicator" 
                                        Background="{TemplateBinding Foreground}" 
                                        HorizontalAlignment="Left"
                                        CornerRadius="3"/>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Gradient Text Style -->
        <Style x:Key="GradientText" TargetType="TextBlock">
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FFFFFF" Offset="0"/>
                        <GradientStop Color="#B8C5D9" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ScrollBar Styles -->
        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border Background="#B31990FE" CornerRadius="4"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid>
                            <Border Background="#4D0A0F1E" CornerRadius="3"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,6,0">
            <StackPanel Margin="30,25,30,30">
                <!-- Header Section -->
                <StackPanel Margin="0,0,0,25" Opacity="0">
                    <StackPanel.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard Storyboard="{StaticResource FadeIn}"/>
                        </EventTrigger>
                    </StackPanel.Triggers>
                    <TextBlock x:Name="TxtTitle" 
                               Text="Fresh Windows 11 Setup" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Style="{StaticResource GradientText}"/>
                    <TextBlock x:Name="TxtSubtitle" 
                               Text="Optimize your system after a clean installation" 
                               FontSize="14" 
                               Foreground="{StaticResource TextSecondary}" 
                               Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Status Overview Card -->
                <Border Background="{StaticResource CardBg}" 
                        CornerRadius="16" 
                        Padding="26" 
                        Margin="0,0,0,20"
                        BorderBrush="#1A1F2E"
                        BorderThickness="1"
                        RenderTransformOrigin="0.5,0.5" 
                        Opacity="0">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
                    </Border.Effect>
                    <Border.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Border.RenderTransform>
                    <Border.Triggers>
                        <EventTrigger RoutedEvent="Loaded">
                            <BeginStoryboard Storyboard="{StaticResource ScaleIn}"/>
                        </EventTrigger>
                    </Border.Triggers>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock x:Name="TxtStatusTitle" 
                                       Text="System Status" 
                                       FontSize="20" 
                                       FontWeight="Bold" 
                                       Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock x:Name="TxtStatusDesc" 
                                       Text="Ready for initial configuration" 
                                       FontSize="13" 
                                       Foreground="{StaticResource TextSecondary}" 
                                       Margin="0,6,0,0"/>

                            <!-- Live Status Display -->
                            <TextBlock x:Name="TxtLiveStatus"
                                       Text=""
                                       FontSize="12"
                                       Foreground="{StaticResource AccentBlue}"
                                       Margin="0,12,0,0"
                                       TextWrapping="Wrap"
                                       Visibility="Collapsed"/>

                            <ProgressBar x:Name="ProgressBarMain" 
                                        Height="6" 
                                        Margin="0,16,0,0"
                                        Background="#1A1F2E"
                                        Foreground="{StaticResource AccentBlue}"
                                        Maximum="100"
                                        Value="0"
                                        Style="{StaticResource RoundedProgressBar}"/>
                        </StackPanel>

                        <Border Grid.Column="1" 
                                x:Name="ProgressCircleBorder"
                                CornerRadius="60" 
                                Width="90" 
                                Height="90"
                                BorderBrush="{StaticResource AccentBlue}"
                                BorderThickness="2"
                                RenderTransformOrigin="0.5,0.5">
                            <Border.Background>
                                <RadialGradientBrush>
                                    <GradientStop Color="#261990FE" Offset="0"/>
                                    <GradientStop Color="Transparent" Offset="1"/>
                                </RadialGradientBrush>
                            </Border.Background>
                            <Border.Effect>
                                <DropShadowEffect Color="#1990FE" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                            </Border.Effect>
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <TextBlock x:Name="TxtProgress" 
                                       Text="0%" 
                                       FontSize="22" 
                                       FontWeight="Black" 
                                       Foreground="{StaticResource AccentBlue}" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                </Border>

                <!-- Run All Button -->
                <Button x:Name="BtnRunAll" 
                        Content="🚀 Run Complete Setup" 
                        Style="{StaticResource ActionButton}"
                        Background="{StaticResource AccentGreen}"
                        FontSize="16"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,30"
                        Click="BtnRunAll_Click"/>

                <!-- Step 1: Windows Update -->
                <Border x:Name="Step1Card" Style="{StaticResource StepCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border x:Name="Step1Badge" 
                                CornerRadius="12" 
                                Width="56" 
                                Height="56"
                                VerticalAlignment="Top"
                                BorderBrush="{StaticResource AccentBlue}"
                                BorderThickness="1">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#1A1990FE" Offset="0"/>
                                    <GradientStop Color="#0D1565C0" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="1" 
                                       FontSize="26" 
                                       FontWeight="Black" 
                                       Foreground="{StaticResource AccentBlue}" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <TextBlock x:Name="TxtStep1Title" 
                                       Text="Update Windows" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock x:Name="TxtStep1Desc" 
                                       Text="Install all available Windows 11 updates (multiple passes)" 
                                       FontSize="13" 
                                       Foreground="{StaticResource TextSecondary}"
                                       Margin="0,6,0,12"
                                       TextWrapping="Wrap"/>
                            <TextBlock x:Name="TxtStep1Status" 
                                       Text="⏳ Pending" 
                                       FontSize="12" 
                                       Foreground="{StaticResource AccentOrange}"
                                       FontWeight="Medium"/>
                            <ProgressBar x:Name="ProgressStep1" 
                                        Height="4" 
                                        Margin="0,10,0,0"
                                        Background="#1A1F2E"
                                        Foreground="{StaticResource AccentBlue}"
                                        Maximum="100"
                                        Value="0"
                                        Visibility="Collapsed"
                                        Style="{StaticResource RoundedProgressBar}"/>
                        </StackPanel>

                        <Button Grid.Column="2" 
                                x:Name="BtnStep1"
                                Content="Start" 
                                Style="{StaticResource ActionButton}"
                                Padding="20,10"
                                Click="BtnStep1_Click"
                                Visibility="Collapsed"/>
                    </Grid>
                </Border>

                <!-- Step 2: Update Drivers -->
                <Border x:Name="Step2Card" Style="{StaticResource StepCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border x:Name="Step2Badge"
                                CornerRadius="12" 
                                Width="56" 
                                Height="56"
                                VerticalAlignment="Top"
                                BorderBrush="{StaticResource AccentBlue}"
                                BorderThickness="1">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#1A1990FE" Offset="0"/>
                                    <GradientStop Color="#0D1565C0" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="2" 
                                       FontSize="26" 
                                       FontWeight="Black" 
                                       Foreground="{StaticResource AccentBlue}" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <TextBlock x:Name="TxtStep2Title" 
                                       Text="Update Drivers" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock x:Name="TxtStep2Desc" 
                                       Text="Check and install latest drivers for hardware" 
                                       FontSize="13" 
                                       Foreground="{StaticResource TextSecondary}"
                                       Margin="0,6,0,12"
                                       TextWrapping="Wrap"/>
                            <TextBlock x:Name="TxtStep2Status" 
                                       Text="⏳ Pending" 
                                       FontSize="12" 
                                       Foreground="{StaticResource AccentOrange}"
                                       FontWeight="Medium"/>
                            <ProgressBar x:Name="ProgressStep2" 
                                        Height="4" 
                                        Margin="0,10,0,0"
                                        Background="#1A1F2E"
                                        Foreground="{StaticResource AccentBlue}"
                                        Maximum="100"
                                        Value="0"
                                        Visibility="Collapsed"
                                        Style="{StaticResource RoundedProgressBar}"/>
                        </StackPanel>

                        <Button Grid.Column="2" 
                                x:Name="BtnStep2"
                                Content="Start" 
                                Style="{StaticResource ActionButton}"
                                Padding="20,10"
                                Click="BtnStep2_Click"
                                Visibility="Collapsed"/>
                    </Grid>
                </Border>

                <!-- Step 3: Clean System -->
                <Border x:Name="Step3Card" Style="{StaticResource StepCard}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Border x:Name="Step3Badge"
                                CornerRadius="12" 
                                Width="56" 
                                Height="56"
                                VerticalAlignment="Top"
                                BorderBrush="{StaticResource AccentGreen}"
                                BorderThickness="1">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#1A10B981" Offset="0"/>
                                    <GradientStop Color="#0D059669" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="3" 
                                       FontSize="26" 
                                       FontWeight="Black" 
                                       Foreground="{StaticResource AccentGreen}" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <TextBlock x:Name="TxtStep3Title" 
                                       Text="Clean System" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock x:Name="TxtStep3Desc" 
                                       Text="Remove temporary files, caches and old Windows versions" 
                                       FontSize="13" 
                                       Foreground="{StaticResource TextSecondary}"
                                       Margin="0,6,0,10"
                                       TextWrapping="Wrap"/>
                            <StackPanel Margin="0,0,0,12">
                                <TextBlock Text="• Temp files" FontSize="11" Foreground="#80ffffff" Margin="0,2"/>
                                <TextBlock Text="• Windows Update cache" FontSize="11" Foreground="#80ffffff" Margin="0,2"/>
                                <TextBlock Text="• Old Windows versions" FontSize="11" Foreground="#80ffffff" Margin="0,2"/>
                            </StackPanel>
                            <TextBlock x:Name="TxtStep3Status" 
                                       Text="⏳ Pending" 
                                       FontSize="12" 
                                       Foreground="{StaticResource AccentOrange}"
                                       FontWeight="Medium"/>
                            <ProgressBar x:Name="ProgressStep3" 
                                        Height="4" 
                                        Margin="0,10,0,0"
                                        Background="#1A1F2E"
                                        Foreground="{StaticResource AccentGreen}"
                                        Maximum="100"
                                        Value="0"
                                        Visibility="Collapsed"
                                        Style="{StaticResource RoundedProgressBar}"/>
                        </StackPanel>

                        <Button Grid.Column="2" 
                                x:Name="BtnStep3"
                                Content="Start" 
                                Style="{StaticResource ActionButton}"
                                Background="{StaticResource AccentGreen}"
                                Padding="20,10"
                                Click="BtnStep3_Click"
                                Visibility="Collapsed"/>
                    </Grid>
                </Border>

                <!-- Activity Log Card -->
                <Border x:Name="LogCard" 
                        Background="{StaticResource CardBg}" 
                        CornerRadius="16" 
                        Padding="24" 
                        Margin="0,0,0,20"
                        BorderBrush="#1A1F2E"
                        BorderThickness="1"
                        Visibility="Collapsed">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="0" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock Text="📋 Activity Log" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}"
                                   Margin="0,0,0,16"/>
                        <ScrollViewer Height="200" VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="TxtLog" 
                                       FontSize="12" 
                                       FontFamily="Consolas"
                                       Foreground="{StaticResource TextSecondary}"
                                       TextWrapping="Wrap"
                                       LineHeight="18"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Important Information Card -->
                <Border Background="{StaticResource CardBg}" 
                        CornerRadius="16" 
                        Padding="24" 
                        BorderBrush="#1A1F2E"
                        BorderThickness="1">
                    <Border.Effect>
                        <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="0" Opacity="0.2"/>
                    </Border.Effect>
                    <StackPanel>
                        <TextBlock x:Name="TxtInfoTitle" 
                                   Text="ℹ️ Important Information" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}"
                                   Margin="0,0,0,16"/>
                        <TextBlock x:Name="TxtInfo1" 
                                   Text="• This process may take 30-90 minutes depending on updates" 
                                   FontSize="13" 
                                   Foreground="{StaticResource TextSecondary}"
                                   TextWrapping="Wrap"
                                   LineHeight="22"
                                   Margin="0,4"/>
                        <TextBlock x:Name="TxtInfo2" 
                                   Text="• MUST run as Administrator" 
                                   FontSize="13" 
                                   Foreground="{StaticResource TextSecondary}"
                                   LineHeight="22"
                                   Margin="0,4"/>
                        <TextBlock x:Name="TxtInfo3" 
                                   Text="• Keep computer powered on and connected to internet" 
                                   FontSize="13" 
                                   Foreground="{StaticResource TextSecondary}"
                                   LineHeight="22"
                                   Margin="0,4"/>
                        <TextBlock x:Name="TxtInfo4" 
                                   Text="• System may restart automatically multiple times" 
                                   FontSize="13" 
                                   Foreground="{StaticResource AccentOrange}"
                                   LineHeight="22"
                                   Margin="0,4"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Custom Dialog Overlay -->
        <Grid x:Name="DialogOverlay" 
              Background="#E5000000" 
              Visibility="Collapsed"
              Panel.ZIndex="1000">
            <Border x:Name="DialogBox"
                    CornerRadius="20"
                    Width="500"
                    Padding="40"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    BorderBrush="#1A1F2E"
                    BorderThickness="1">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#0F1419" Offset="0"/>
                        <GradientStop Color="#0A0F1E" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="40" ShadowDepth="0" Opacity="0.6"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Icon -->
                    <Border CornerRadius="60" 
                            Width="90" 
                            Height="90" 
                            HorizontalAlignment="Center" 
                            Margin="0,0,0,28"
                            BorderBrush="{StaticResource AccentBlue}"
                            BorderThickness="2">
                        <Border.Background>
                            <RadialGradientBrush>
                                <GradientStop Color="#261990FE" Offset="0"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </RadialGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="#1990FE" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                        </Border.Effect>
                        <TextBlock x:Name="DialogIcon"
                                   Text="❓"
                                   FontSize="42"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title -->
                    <TextBlock x:Name="DialogTitle"
                               Text="Dialog Title"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimary}"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12"/>

                    <!-- Message -->
                    <TextBlock x:Name="DialogMessage"
                               Text="Dialog message goes here"
                               FontSize="14"
                               Foreground="{StaticResource TextSecondary}"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="0,0,0,28"
                               LineHeight="22"/>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,0,0,0">
                        <Button x:Name="DialogBtnYes"
                                Content="Yes / Sim"
                                Style="{StaticResource ActionButton}"
                                Background="{StaticResource AccentGreen}"
                                Padding="30,12"
                                Margin="6"
                                MinWidth="120"
                                Click="DialogBtnYes_Click"/>

                        <Button x:Name="DialogBtnNo"
                                Content="No / Não"
                                Style="{StaticResource ActionButton}"
                                Background="#4D5563"
                                Padding="30,12"
                                Margin="6"
                                MinWidth="120"
                                Click="DialogBtnNo_Click"/>

                        <Button x:Name="DialogBtnOk"
                                Content="OK"
                                Style="{StaticResource ActionButton}"
                                Background="{StaticResource AccentBlue}"
                                Padding="40,12"
                                Margin="6"
                                MinWidth="120"
                                Visibility="Collapsed"
                                Click="DialogBtnOk_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Notification Panel (Top Right) -->
        <Border x:Name="NotificationPanel"
                CornerRadius="16"
                Padding="24"
                Margin="20"
                MaxWidth="400"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Visibility="Collapsed"
                Panel.ZIndex="999"
                BorderBrush="#1A1F2E"
                BorderThickness="1">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#12141A" Offset="0"/>
                    <GradientStop Color="#0A0D12" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.RenderTransform>
                <TranslateTransform X="0" Y="0"/>
            </Border.RenderTransform>
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                                  BlurRadius="30" 
                                  ShadowDepth="0" 
                                  Opacity="0.5"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Icon with colored background -->
                <Border x:Name="NotificationBorder"
                        CornerRadius="12"
                        Width="56"
                        Height="56"
                        VerticalAlignment="Top"
                        Margin="0,0,16,0"
                        BorderBrush="{StaticResource AccentGreen}"
                        BorderThickness="1">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#1A10B981" Offset="0"/>
                            <GradientStop Color="#0D059669" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <TextBlock x:Name="NotificationIcon"
                               Text="✅"
                               FontSize="28"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="NotificationTitle"
                               Text="Success"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimary}"
                               Margin="0,0,0,6"/>

                    <TextBlock x:Name="NotificationMessage"
                               Text="Operation completed successfully!"
                               FontSize="13"
                               Foreground="{StaticResource TextSecondary}"
                               TextWrapping="Wrap"
                               LineHeight="18"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>