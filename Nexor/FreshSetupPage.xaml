<UserControl x:Class="Nexor.FreshSetupPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="Transparent"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryBg" Color="#010515"/>
        <SolidColorBrush x:Key="SecondaryBg" Color="#0A0F1E"/>
        <SolidColorBrush x:Key="CardBg" Color="#0F1419"/>
        <SolidColorBrush x:Key="AccentBlue" Color="#1990FE"/>
        <SolidColorBrush x:Key="AccentGreen" Color="#10B981"/>
        <SolidColorBrush x:Key="AccentOrange" Color="#F59E0B"/>
        <SolidColorBrush x:Key="AccentRed" Color="#EF4444"/>
        <SolidColorBrush x:Key="AccentPurple" Color="#8B5CF6"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#9CA3AF"/>
        <SolidColorBrush x:Key="BorderColor" Color="#1A1F2E"/>

        <!-- Action Button Style with Enhanced Animations -->
        <Style x:Key="ActionButton" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource AccentBlue}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="24,14"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}" 
                                CornerRadius="10" 
                                Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect x:Name="ButtonShadow"
                                                Color="{Binding Path=Background.Color, RelativeSource={RelativeSource TemplatedParent}}" 
                                                BlurRadius="16" 
                                                ShadowDepth="0" 
                                                Opacity="0.3"/>
                            </Border.Effect>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ButtonShadow"
                                                           Storyboard.TargetProperty="BlurRadius"
                                                           To="24" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="ButtonShadow"
                                                           Storyboard.TargetProperty="Opacity"
                                                           To="0.5" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ButtonShadow"
                                                           Storyboard.TargetProperty="BlurRadius"
                                                           To="16" Duration="0:0:0.2"/>
                                            <DoubleAnimation Storyboard.TargetName="ButtonShadow"
                                                           Storyboard.TargetProperty="Opacity"
                                                           To="0.3" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ButtonBorder"
                                                           Storyboard.TargetProperty="Opacity"
                                                           To="0.8" Duration="0:0:0.05"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="ButtonBorder"
                                                           Storyboard.TargetProperty="Opacity"
                                                           To="1" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1.05" Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1.05" Duration="0:0:0.2">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1" Duration="0:0:0.2"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Animated Card Style -->
        <Style x:Key="AnimatedCard" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="24"/>
            <Setter Property="BorderBrush" Value="#1A1F2E"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Setter.Value>
            </Setter>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="15" ShadowDepth="0" Opacity="0.2"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1.02" Duration="0:0:0.3">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1.02" Duration="0:0:0.3">
                                    <DoubleAnimation.EasingFunction>
                                        <CubicEase EasingMode="EaseOut"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.BlurRadius)"
                                               To="25" Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                                               To="0.35" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)"
                                               To="1" Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)"
                                               To="1" Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.BlurRadius)"
                                               To="15" Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.Effect).(DropShadowEffect.Opacity)"
                                               To="0.2" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Animated Badge Style -->
        <Style x:Key="AnimatedBadge" TargetType="Border">
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Width" Value="56"/>
            <Setter Property="Height" Value="56"/>
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5"/>
            <Setter Property="RenderTransform">
                <Setter.Value>
                    <TransformGroup>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                        <RotateTransform Angle="0"/>
                    </TransformGroup>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                               To="1.1" Duration="0:0:0.3">
                                    <DoubleAnimation.EasingFunction>
                                        <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                               To="1.1" Duration="0:0:0.3">
                                    <DoubleAnimation.EasingFunction>
                                        <BackEase EasingMode="EaseOut" Amplitude="0.3"/>
                                    </DoubleAnimation.EasingFunction>
                                </DoubleAnimation>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(RotateTransform.Angle)"
                                               To="5" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)"
                                               To="1" Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)"
                                               To="1" Duration="0:0:0.3"/>
                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[1].(RotateTransform.Angle)"
                                               To="0" Duration="0:0:0.3"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Gradient Text Style -->
        <Style x:Key="GradientText" TargetType="TextBlock">
            <Setter Property="Foreground">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FFFFFF" Offset="0"/>
                        <GradientStop Color="#B8C5D9" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ScrollBar Styles -->
        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border x:Name="ThumbBorder"
                                Background="#B31990FE" 
                                CornerRadius="4">
                            <Border.RenderTransform>
                                <ScaleTransform ScaleY="1"/>
                            </Border.RenderTransform>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Trigger.EnterActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="ThumbBorder"
                                                          Storyboard.TargetProperty="Background.Color"
                                                          To="#E61990FE" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.EnterActions>
                                <Trigger.ExitActions>
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <ColorAnimation Storyboard.TargetName="ThumbBorder"
                                                          Storyboard.TargetProperty="Background.Color"
                                                          To="#B31990FE" Duration="0:0:0.2"/>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </Trigger.ExitActions>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="6"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ScrollBar}">
                        <Grid>
                            <Border Background="#4D0A0F1E" CornerRadius="3"/>
                            <Track x:Name="PART_Track" IsDirectionReversed="True">
                                <Track.Thumb>
                                    <Thumb Style="{StaticResource ScrollBarThumb}"/>
                                </Track.Thumb>
                            </Track>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,6,0">
            <StackPanel Margin="30,25,30,30">
                <!-- Header Section with Fade In -->
                <StackPanel x:Name="HeaderSection" 
                            Margin="0,0,0,25" 
                            Opacity="0"
                            RenderTransformOrigin="0.5,0.5">
                    <StackPanel.RenderTransform>
                        <TranslateTransform Y="-50"/>
                    </StackPanel.RenderTransform>
                    <TextBlock x:Name="TxtTitle" 
                               Text="Fresh Windows 11 Setup" 
                               FontSize="32" 
                               FontWeight="Bold" 
                               Style="{StaticResource GradientText}"/>
                    <TextBlock x:Name="TxtSubtitle" 
                               Text="Complete system optimization and maintenance" 
                               FontSize="14" 
                               Foreground="{StaticResource TextSecondary}" 
                               Margin="0,8,0,0"/>
                </StackPanel>

                <!-- Run Button with Pulse Animation -->
                <Button x:Name="BtnRunAll" 
                        Content="🚀 Start Windows Optimization" 
                        Style="{StaticResource ActionButton}"
                        Background="{StaticResource AccentGreen}"
                        FontSize="16"
                        HorizontalAlignment="Stretch"
                        Margin="0,0,0,30"
                        Opacity="0"
                        Click="BtnRunAll_Click">
                    <Button.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Button.RenderTransform>
                </Button>

                <!-- Step 1: Windows Update -->
                <Border x:Name="Step1Card" 
                        Style="{StaticResource AnimatedCard}"
                        Margin="0,0,0,16"
                        Opacity="0">
                    <Border.RenderTransform>
                        <TranslateTransform X="0"/>
                    </Border.RenderTransform>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border x:Name="Step1Badge" 
                                Style="{StaticResource AnimatedBadge}"
                                VerticalAlignment="Top"
                                BorderBrush="{StaticResource AccentBlue}"
                                BorderThickness="1">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#1A1990FE" Offset="0"/>
                                    <GradientStop Color="#0D1565C0" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="1" 
                                       FontSize="26" 
                                       FontWeight="Black" 
                                       Foreground="{StaticResource AccentBlue}" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <TextBlock x:Name="TxtStep1Title" 
                                       Text="Update Windows" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock x:Name="TxtStep1Desc" 
                                       Text="Install all available Windows 11 updates (multiple passes)" 
                                       FontSize="13" 
                                       Foreground="{StaticResource TextSecondary}"
                                       Margin="0,6,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Step 2: Update Drivers -->
                <Border x:Name="Step2Card" 
                        Style="{StaticResource AnimatedCard}"
                        Margin="0,0,0,16"
                        Opacity="0">
                    <Border.RenderTransform>
                        <TranslateTransform X="0"/>
                    </Border.RenderTransform>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border x:Name="Step2Badge"
                                Style="{StaticResource AnimatedBadge}"
                                VerticalAlignment="Top"
                                BorderBrush="{StaticResource AccentBlue}"
                                BorderThickness="1">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#1A1990FE" Offset="0"/>
                                    <GradientStop Color="#0D1565C0" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="2" 
                                       FontSize="26" 
                                       FontWeight="Black" 
                                       Foreground="{StaticResource AccentBlue}" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <TextBlock x:Name="TxtStep2Title" 
                                       Text="Update Drivers" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock x:Name="TxtStep2Desc" 
                                       Text="Check and install latest device drivers" 
                                       FontSize="13" 
                                       Foreground="{StaticResource TextSecondary}"
                                       Margin="0,6,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Step 3: Clean System -->
                <Border x:Name="Step3Card" 
                        Style="{StaticResource AnimatedCard}"
                        Margin="0,0,0,30"
                        Opacity="0">
                    <Border.RenderTransform>
                        <TranslateTransform X="0"/>
                    </Border.RenderTransform>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border x:Name="Step3Badge"
                                Style="{StaticResource AnimatedBadge}"
                                VerticalAlignment="Top"
                                BorderBrush="{StaticResource AccentGreen}"
                                BorderThickness="1">
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Color="#1A10B981" Offset="0"/>
                                    <GradientStop Color="#0D059669" Offset="1"/>
                                </LinearGradientBrush>
                            </Border.Background>
                            <TextBlock Text="3" 
                                       FontSize="26" 
                                       FontWeight="Black" 
                                       Foreground="{StaticResource AccentGreen}" 
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" Margin="20,0,0,0">
                            <TextBlock x:Name="TxtStep3Title" 
                                       Text="Clean System" 
                                       FontSize="18" 
                                       FontWeight="Bold"
                                       Foreground="{StaticResource TextPrimary}"/>
                            <TextBlock x:Name="TxtStep3Desc" 
                                       Text="Remove temporary files, caches and optimize disk space" 
                                       FontSize="13" 
                                       Foreground="{StaticResource TextSecondary}"
                                       Margin="0,6,0,0"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Log Card with Slide Animation -->
                <Border x:Name="LogCard" 
                        Style="{StaticResource AnimatedCard}"
                        Margin="0,0,0,20"
                        Visibility="Collapsed"
                        Opacity="0">
                    <Border.RenderTransform>
                        <TranslateTransform Y="0"/>
                    </Border.RenderTransform>
                    <StackPanel>
                        <TextBlock Text="📋 Activity Log" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}"
                                   Margin="0,0,0,16"/>
                        <ScrollViewer Height="300" VerticalScrollBarVisibility="Auto">
                            <TextBlock x:Name="TxtLog" 
                                       FontSize="11" 
                                       FontFamily="Consolas"
                                       Foreground="{StaticResource TextSecondary}"
                                       TextWrapping="Wrap"
                                       LineHeight="16"/>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- Important Information Card -->
                <Border x:Name="InfoCard"
                        Style="{StaticResource AnimatedCard}"
                        Opacity="0">
                    <Border.RenderTransform>
                        <TranslateTransform Y="0"/>
                    </Border.RenderTransform>
                    <StackPanel>
                        <TextBlock x:Name="TxtInfoTitle" 
                                   Text="ℹ️ Important Information" 
                                   FontSize="18" 
                                   FontWeight="Bold"
                                   Foreground="{StaticResource TextPrimary}"
                                   Margin="0,0,0,16"/>

                        <TextBlock x:Name="TxtInfo1" 
                                   Text="• This process will launch a PowerShell script to automate Windows updates" 
                                   FontSize="13" 
                                   Foreground="{StaticResource AccentBlue}"
                                   TextWrapping="Wrap"
                                   LineHeight="22"
                                   FontWeight="SemiBold"
                                   Margin="0,4"/>

                        <TextBlock x:Name="TxtInfo2" 
                                   Text="• May take 30-90 minutes depending on available updates" 
                                   FontSize="13" 
                                   Foreground="{StaticResource TextSecondary}"
                                   LineHeight="22"
                                   Margin="0,4"/>

                        <TextBlock x:Name="TxtInfo3" 
                                   Text="• Must run as Administrator" 
                                   FontSize="13" 
                                   Foreground="{StaticResource TextSecondary}"
                                   LineHeight="22"
                                   Margin="0,4"/>

                        <TextBlock x:Name="TxtInfo4" 
                                   Text="• System will restart automatically multiple times - Do not interrupt" 
                                   FontSize="13" 
                                   Foreground="{StaticResource AccentOrange}"
                                   LineHeight="22"
                                   Margin="0,4"
                                   FontWeight="SemiBold"/>

                        <TextBlock x:Name="TxtInfo5" 
                                   Text="• Keep computer powered on and connected to internet" 
                                   FontSize="13" 
                                   Foreground="{StaticResource TextSecondary}"
                                   LineHeight="22"
                                   Margin="0,4"/>

                        <TextBlock x:Name="TxtInfo6" 
                                   Text="• A PowerShell window will open to show update progress" 
                                   FontSize="13" 
                                   Foreground="{StaticResource AccentGreen}"
                                   LineHeight="22"
                                   Margin="0,4"
                                   FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Custom Dialog Overlay with Pop Animation -->
        <Grid x:Name="DialogOverlay" 
              Background="#E5000000" 
              Visibility="Collapsed"
              Opacity="0"
              Panel.ZIndex="1000">
            <Border x:Name="DialogBox"
                    CornerRadius="20"
                    Width="500"
                    Padding="40"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    BorderBrush="#1A1F2E"
                    BorderThickness="1">
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Border.RenderTransform>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#0F1419" Offset="0"/>
                        <GradientStop Color="#0A0F1E" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.Effect>
                    <DropShadowEffect Color="#000000" BlurRadius="40" ShadowDepth="0" Opacity="0.6"/>
                </Border.Effect>

                <StackPanel>
                    <!-- Icon with Glow -->
                    <Border x:Name="DialogIconBorder"
                            CornerRadius="60" 
                            Width="90" 
                            Height="90" 
                            HorizontalAlignment="Center" 
                            Margin="0,0,0,28"
                            BorderBrush="{StaticResource AccentBlue}"
                            BorderThickness="2">
                        <Border.RenderTransform>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                        </Border.RenderTransform>
                        <Border.Background>
                            <RadialGradientBrush>
                                <GradientStop Color="#261990FE" Offset="0"/>
                                <GradientStop Color="Transparent" Offset="1"/>
                            </RadialGradientBrush>
                        </Border.Background>
                        <Border.Effect>
                            <DropShadowEffect Color="#1990FE" BlurRadius="20" ShadowDepth="0" Opacity="0.4"/>
                        </Border.Effect>
                        <TextBlock x:Name="DialogIcon"
                                   Text="❓"
                                   FontSize="42"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                    </Border>

                    <!-- Title -->
                    <TextBlock x:Name="DialogTitle"
                               Text="Dialog Title"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimary}"
                               HorizontalAlignment="Center"
                               TextWrapping="Wrap"
                               Margin="0,0,0,12"/>

                    <!-- Message -->
                    <TextBlock x:Name="DialogMessage"
                               Text="Dialog message goes here"
                               FontSize="14"
                               Foreground="{StaticResource TextSecondary}"
                               TextWrapping="Wrap"
                               HorizontalAlignment="Center"
                               TextAlignment="Center"
                               Margin="0,0,0,28"
                               LineHeight="22"/>

                    <!-- Buttons -->
                    <StackPanel Orientation="Horizontal" 
                                HorizontalAlignment="Center"
                                Margin="0,0,0,0">
                        <Button x:Name="DialogBtnYes"
                                Content="Yes / Sim"
                                Style="{StaticResource ActionButton}"
                                Background="{StaticResource AccentGreen}"
                                Padding="30,12"
                                Margin="6"
                                MinWidth="120"
                                Click="DialogBtnYes_Click"/>

                        <Button x:Name="DialogBtnNo"
                                Content="No / Não"
                                Style="{StaticResource ActionButton}"
                                Background="#4D5563"
                                Padding="30,12"
                                Margin="6"
                                MinWidth="120"
                                Click="DialogBtnNo_Click"/>

                        <Button x:Name="DialogBtnOk"
                                Content="OK"
                                Style="{StaticResource ActionButton}"
                                Background="{StaticResource AccentBlue}"
                                Padding="40,12"
                                Margin="6"
                                MinWidth="120"
                                Visibility="Collapsed"
                                Click="DialogBtnOk_Click"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>

        <!-- Notification Panel (Top Right) with Slide Animation -->
        <Border x:Name="NotificationPanel"
                CornerRadius="16"
                Padding="24"
                Margin="20"
                MaxWidth="400"
                VerticalAlignment="Top"
                HorizontalAlignment="Right"
                Visibility="Collapsed"
                Panel.ZIndex="999"
                BorderBrush="#1A1F2E"
                BorderThickness="1"
                Opacity="0">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="#12141A" Offset="0"/>
                    <GradientStop Color="#0A0D12" Offset="1"/>
                </LinearGradientBrush>
            </Border.Background>
            <Border.RenderTransform>
                <TranslateTransform X="500" Y="0"/>
            </Border.RenderTransform>
            <Border.Effect>
                <DropShadowEffect Color="#000000" 
                                  BlurRadius="30" 
                                  ShadowDepth="0" 
                                  Opacity="0.5"/>
            </Border.Effect>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Icon with colored background -->
                <Border x:Name="NotificationBorder"
                        CornerRadius="12"
                        Width="56"
                        Height="56"
                        VerticalAlignment="Top"
                        Margin="0,0,16,0"
                        BorderBrush="{StaticResource AccentGreen}"
                        BorderThickness="1">
                    <Border.RenderTransform>
                        <ScaleTransform ScaleX="1" ScaleY="1"/>
                    </Border.RenderTransform>
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#1A10B981" Offset="0"/>
                            <GradientStop Color="#0D059669" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                    <TextBlock x:Name="NotificationIcon"
                               Text="✅"
                               FontSize="28"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Border>

                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                    <TextBlock x:Name="NotificationTitle"
                               Text="Success"
                               FontSize="16"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextPrimary}"
                               Margin="0,0,0,6"/>

                    <TextBlock x:Name="NotificationMessage"
                               Text="Operation completed successfully!"
                               FontSize="13"
                               Foreground="{StaticResource TextSecondary}"
                               TextWrapping="Wrap"
                               LineHeight="18"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>